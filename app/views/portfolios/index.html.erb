<h1>Portfolio Items</h1>

<a href="portfolios/new"> Create New Item </a>
<%= link_to "Create New Item using link to", new_portfolio_path %>
<% @portfolio_items.each do |portfolio_item| %>
  <p><%= portfolio_item.title %></p>
  <p><%= portfolio_item.subtitle %></p>
  <p><%= portfolio_item.body %></p>
  <p><%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %></p>
  <p><%= link_to "edit this article", edit_portfolio_path(portfolio_item.id) %></p>
  <p><%= link_to "go this article", portfolio_path(portfolio_item.id) %></p>
<% end %>